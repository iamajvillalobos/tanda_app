<div class="container">
  <div class="columns">
    <div class="column is-half is-offset-one-quarter">
      <%= form_tag controller: "datastreams", action: "create", method: "post" do %>
        <div class="field">
          <label class="label">Name:</label>
          <p class="control">
            <%= text_field_tag :name, nil, class: "input" %>
          </p>
        </div>

        <div class="field">
          <label class="label">Interval:</label>
          <p class="control">
            <span class="select">
              <%= select_tag(:interval, options_for_select(@intervals)) %>
            </span>
          </p>
        </div>

        <div class="field is-grouped">
          <p class="control">
            <%= submit_tag "Create datastream", class: "button is-info" %>
          </p>
          <p class="control">
            <button class="button is-link">Cancel</button>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>



